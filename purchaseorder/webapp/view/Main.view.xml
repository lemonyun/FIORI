<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:sv="sap.ui.comp.smartvariants"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core" 
    controllerName="purchaseorder.controller.Main" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <f:DynamicPage showFooter="false">
            <!-- <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <sv:SmartVariantManagement id="idSmartVariant" persistencyKey="SmartFilter_Variant" showShare="true" showExecuteOnSelection="true"/>
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title> -->
            <f:header>
                <f:DynamicPageHeader>
                    <f:content>
                        <smartFilterBar:SmartFilterBar 
                        id="idSmartFilterBar" 
                        useToolbar="false" 
                        smartVariant="idSmartVariant" 
                        entitySet="PurchaseEntitySet" 
                        persistencyKey="SmartFilter_Explored"/>
                    </f:content>

                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <smartTable:SmartTable 
                id="idSmartTable" 
                entitySet="PurchaseEntitySet" 
                smartFilterId="idSmartFilterBar" 
                useVariantManagement="true" 
                useTablePersonalisation="true" 
                smartVariant="ResponsiveTable" 
                header="{i18n>listHeaderTitle}" 
                tableType="ResponsiveTable" 
                enableAutoBinding="true" 
                class="sapUiResponsiveContentPadding"
                showRowCount="true" 
                demandPopin="true">

                    <smartTable:items>
                        <Table sticky="ColumnHeaders,HeaderToolbar" growing="true" growingScrollToLoad="true" fixedLayout="false"
                                itemPress="handleItemPress" mode="SingleSelectMaster">
                            <columns>

                                <!-- <Column >
                                    <customData>
                                        <core:CustomData key="p13nData1" value='\{"columnKey": "Oddate", "leadingProperty": "Oddate", "columnIndex": 5, "visible": false}'/>
                                    </customData>
                                    <Text text="오더일자"></Text>
                                    
                                </Column> -->
                                <Column>
                                    <customData>
                                        <core:CustomData key="p13nData" value='\{"columnKey": "Checkstate", "leadingProperty": "Checkstate", "columnIndex": 6}'/>
                                    </customData>
                                    <Text text="승인상태"></Text>
                                    
                                </Column>

                                <Column>
                                    <customData>
                                        <core:CustomData key="p13nData" value='\{"columnKey": "Oddate", "leadingProperty": "Oddate", "columnIndex": 5}'/>
                                    </customData>
                                    <Text text="오더일자"></Text>
                                    
                                </Column>

                            </columns>

                            <items>
                                <ColumnListItem type="Navigation">
                                    <ObjectStatus text="{= ${Checkstate} > '1' ? '승인' : '미승인'}" state="{path: 'Checkstate', formatter: '.formatter.checkstate'}"></ObjectStatus>                                    
                                    <ObjectStatus text="{path: 'Oddate', formatter: '.fnDateToString'}"/>
                                </ColumnListItem>
                            </items>

                        </Table>               
                    </smartTable:items>

                </smartTable:SmartTable>
            </f:content>
        </f:DynamicPage>
    </Page>
</mvc:View>