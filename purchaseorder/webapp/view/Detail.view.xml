<mvc:View controllerName="purchaseorder.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="idPage" title="title" showNavButton="true" navButtonPress="onNavBack"> <!-- nav버튼을 눌러 main 뷰로 돌아가기-->
        <content>
            <Table id="idTable"                 
                items="{
                    path : '/PurchaseItemEntitySet',
                    sorter : { path : 'Duedate', descending: false }
                }">

                <columns>
                    <Column width="6em" hAlign="Begin">
                        <Text text="구매오더코드" />
                    </Column>
                    <Column width="6em" hAlign="Begin">
                        <Text text="자재코드" />
                    </Column>
                    <Column width="6em" hAlign="End">
                        <Text text="납기일" />
                    </Column>
                    <Column width="6em" hAlign="Begin">
                        <Text text="자재명" />
                    </Column>
                    <Column width="6em" hAlign="End">
                        <Text text="수량" />
                    </Column>
                    <Column width="6em" hAlign="End">
                        <Text text="단위" />
                    </Column>
                     <Column width="6em" hAlign="End">
                        <Text text="총 금액" />
                    </Column> 
                    <Column width="6em" hAlign="End">
                        <Text text="통화" />
                    </Column>
                    
                </columns>
                <items>
                    <ColumnListItem >
                        <cells>
                            <Text text="{Pocode}"/>
                            <Text text="{Matcode}" />
                            <Text text="{Duedate}" />
                            <Text text="{Matname}" />
                            <Text text="{Quant}" />
                            <Text text="{Unit}" />
                            <Text text="{Totprice}" />
                            <Text text="{Currkey}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
